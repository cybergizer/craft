<section class="section">
  <div class="section__container">
    <div class="section__inner-container">
      <div class="section__single-header">
        {% capture top_title %}
          {% if page.title != blank %}
            {{ page.title | escape }}
          {% else %}
            {{ site.metadata.title | escape }}{% endif %}
        {% endcapture %}
        {% if page.title_image != blank %}
          <img
            class="hero__image"
            src="{% webpack_path page.title_image %}"
            alt="{{ top_title }}" />
        {% else %}
          <h1 class="section__single-header-medium" style="text-transform: uppercase; font-weight: 700;">
            {{ top_title }}
          </h1>
        {% endif %}
      </div>
    </div>
  </div>
</section>